<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Email: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/textView4"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="Adr:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/textView2"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="0770515695"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tel"
        android:layout_above="@+id/textView5"
        android:layout_alignEnd="@+id/adress"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="mailxyz@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mail"
        android:layout_below="@+id/tel"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="Cité Hayet _ Ain Naadja"
        android:layout_height="wrap_content"
        android:id="@+id/adress"
        android:layout_width="wrap_content"
        android:layout_below="@+id/spec"
        android:layout_toEndOf="@+id/textView5"
        android:layout_above="@+id/tel" />

    <TextView
        android:text="Cardiologue"
        android:layout_height="wrap_content"
        android:id="@+id/spec"
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/adress" />

    <TextView
        android:text="Tel:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView5" />

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/pic"
        android:background="@color/black_overlay"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true">

    </FrameLayout>

    <TextView
        android:text="Spéc:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:id="@+id/textView2"
        android:layout_below="@+id/name"
        android:layout_toEndOf="@+id/pic"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="NOMNOMNOM PrénomPrénom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView3" />

</RelativeLayout>